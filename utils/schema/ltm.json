{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LongTermMemory",
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "content": { "type": "string" },
      "project_id": { "type": "string" },
      "metadata": {
        "type": "object",
        "properties": {
          "file_path": { "type": "string" },
          "function_name": { "type": "string" },
          "category": { "type": "string", "enum": ["function", "module", "commit_log", "guideline", "architecture"] },
          "module": { "type": "string" },
          "author": { "type": "string" },
          "reviewer": { "type": "string" },
          "git_commit": { "type": "string" },
          "issue_id": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "last_accessed": { "type": "string", "format": "date-time" },
          "importance": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
          "graph_links": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "target": { "type": "string" }
              },
              "required": ["type", "target"]
            }
          },
          "embedding": { "type": "array", "items": { "type": "number" } },
          "ttl": { "type": ["string", "integer"] }
        },
        "required": ["category", "embedding"]
      }
    },
    "required": ["id", "content", "project_id", "metadata"]
  }
  